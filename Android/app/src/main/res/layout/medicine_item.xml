<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250sp"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/obat_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@color/pink_brown"
        android:layout_gravity="center"
        android:contentDescription="Medicine Image" />




        <TextView
            android:id="@+id/obat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4sp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Medicine Name" />

        <TextView
            android:id="@+id/obat_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Medicine Price" />



    <Button
        android:id="@+id/add_to_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pink_brown"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:text="Add to Cart" />

</LinearLayout>
