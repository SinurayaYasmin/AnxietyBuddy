<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6EB"
    tools:context=".activity.LoginActivity">

    <!-- Add a horizontal guideline below the grass -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="450dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/loginpageimg"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.535" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetexth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="402dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetextv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineemail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.67"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinepassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.74"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinetextvr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.60"

        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinebutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.84"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineforgot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineregister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91"

        />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/imageView2"
        android:background="@drawable/login"
        app:layout_constraintStart_toStartOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/guideline"

        >

    </View>

    <TextView
        android:id="@+id/logintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:fontFamily="@font/passionone"
        android:textColor="#FFF6EB"
        android:textSize="40sp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/guidelinetextv"
        app:layout_constraintEnd_toEndOf="@id/guidelinetextvr"
        app:layout_constraintTop_toTopOf="@id/guidelinetexth"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        />

    <TextView
        android:id="@+id/apptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AnxietyBuddy"
        android:fontFamily="@font/reeniebeanie"
        android:textColor="#FFF6EB"
        android:textSize="35sp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/guidelinetextv"
        app:layout_constraintEnd_toEndOf="@id/guidelinetextvr"
        app:layout_constraintTop_toBottomOf="@id/logintitle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:ems="10"
        android:background="#FFF6EB"
        android:inputType="textEmailAddress"
        android:hint=" Input your E-Mail or Username"
        android:textColorHint="#682A4208"
        android:textColor="@color/black"
        android:fontFamily = "@font/patrickhand"
        app:layout_constraintStart_toStartOf="@id/guidelinetextv"
        app:layout_constraintEnd_toEndOf="@id/guidelinetextvr"
        app:layout_constraintTop_toTopOf="@id/guidelineemail"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:ems="10"
        android:background="#FFF6EB"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:hint=" Input your Password"
        android:textColorHint="#682A4208"
        android:fontFamily = "@font/patrickhand"
        app:layout_constraintStart_toStartOf="@id/guidelinetextv"
        app:layout_constraintEnd_toEndOf="@id/guidelinetextvr"
        app:layout_constraintTop_toBottomOf="@id/guidelinepassword"
        />

    <Button
        android:id="@+id/buttonlogin"
        android:layout_width="300sp"
        android:layout_height="45sp"
        android:text="LOGIN"
        android:fontFamily="@font/passionone"
        android:textSize="23sp"
        android:backgroundTint="@color/pink_brown"
        app:layout_constraintStart_toStartOf="@id/guidelinetextv"
        app:layout_constraintEnd_toEndOf="@id/guidelinetextvr"
        app:layout_constraintTop_toBottomOf="@id/guidelinebutton"
      />

    <TextView
        android:id="@+id/clickable_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't Have An Account?! Register Here!"
        android:textColor="#CB2A4208"
        android:onClick="onTextClick"
        android:fontFamily="@font/patrickhand"
        android:padding="10dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/guidelinetextv"
        app:layout_constraintEnd_toEndOf="@id/guidelinetextvr"
        app:layout_constraintTop_toBottomOf="@id/guidelineregister"

        />


    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textColor="#CB2A4208"
        android:onClick="onTextClick"
        android:textStyle="italic"
        android:fontFamily="@font/patrickhand"
        android:padding="10dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/guidelinetextv"
        app:layout_constraintEnd_toEndOf="@id/guidelinetextvr"
        app:layout_constraintTop_toTopOf="@id/guidelineforgot"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
